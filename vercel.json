{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.3",
      "config": {
        "php": {
          "extensions": ["mongodb", "curl", "openssl", "json", "mbstring", "fileinfo"]
        }
      }
    }
  },
  "routes": [
    { 
      "src": "/(.*)",  
      "dest": "/api/index.php" 
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PHP_VERSION": "8.0"
  }
} 