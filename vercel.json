{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "vercel-php@0.7.3",
      "config": {
        "php": {
          "extensions": ["mongodb", "curl", "openssl"]
        }
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^(.*)$",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PHP_VERSION": "8.0"
  },
  "build": {
    "env": {
      "COMPOSER_ALLOW_SUPERUSER": "1"
    }
  },
  "buildCommand": "bash vercel-build.sh"
} 